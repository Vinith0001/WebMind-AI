{
  "manifest_version": 3,
  "name": "WebMind AI",
  "version": "1.0",
  "description": "Smart web content analysis with AI",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.jpg"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": ["http://localhost:8000/"]
}
